<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/main_activity_text_edittext"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="@string/edittext_text_hint"
            android:layout_marginBottom="10dp"
            android:singleLine="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:nextFocusDown="@+id/main_activity_number_edittext"/>

        <EditText
            android:id="@+id/main_activity_number_edittext"
            android:inputType="number"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="@string/edittext_number_hint"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/main_activity_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_text"
            android:layout_gravity="center_horizontal"/>

        <ProgressBar
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:id="@+id/progressbar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:max="100"
            android:visibility="gone"/>

    </LinearLayout>

</RelativeLayout>